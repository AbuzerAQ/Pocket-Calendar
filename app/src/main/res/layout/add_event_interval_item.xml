<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/add_event_interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Interval"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/add_event_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Start"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_event_interval"
        app:layout_constraintEnd_toStartOf="@+id/add_event_start_time" />

    <TextView
        android:id="@+id/add_event_end"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="End"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_event_interval"
        app:layout_constraintEnd_toStartOf="@+id/add_event_end_time" />

    <EditText
        android:id="@+id/add_event_start_time"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="00:00"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_event_start"
        app:layout_constraintEnd_toStartOf="@+id/add_event_end" />

    <EditText
        android:id="@+id/add_event_end_time"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="00:00"
        android:textSize="14sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_event_end"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>